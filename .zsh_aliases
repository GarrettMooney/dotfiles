# 5 functions added by Garrett on 7/7/2015
# make directory and cd to it in one function
mcd() 
{
    mkdir -p $1
    cd $1
}
# inspect head & tail (meant for csv)
i()
{
    (head -n 5; tail -n 5) < "$1"
}
# create a pdf for a Unix/Linux man page
man2pdf() 
{
    man -t $1 | ps2pdf - > $1.pdf
}

