# oh-my-zsh
export ZSH="$HOME/.oh-my-zsh"

# vim
export EDITOR="nvim"
export USE_EDITOR=$EDITOR
export VISUAL=$EDITOR

# add cargo to path
addToPathFront "$HOME/.cargo/bin"

# ~/bin path
export MY_BIN=~/bin
addToPathFront "$MY_BIN"
addToPath "$HOME/.local/bin"

# teamocil
addToPathFront "/usr/local/lib/ruby/gems/3.1.0/bin"

# jupyter kernels
export JUPYTER_KERNELS="$HOME/Library/Jupyter/kernels"

# Note: Sensitive environment variables (API keys, tokens, account numbers, etc.)
# should be placed in ~/.tokens instead of here
# The ~/.tokens file is gitignored and will not be committed

# fzf
addToPath "$HOME/.fzf/bin"

# gcp
addToPath "$HOME/google-cloud-sdk/bin"
